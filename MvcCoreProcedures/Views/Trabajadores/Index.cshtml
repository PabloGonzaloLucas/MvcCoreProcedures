@model TrabajadoresModel

@{
    List<string> oficios = ViewBag.Oficios as List<string>;
}

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form method="post">
    <label>Seleccione un oficio</label>
    <select name="oficio" class="form-control">
        @foreach(string oficio in oficios)
            {
                <option>@oficio</option>
            }
        </select>
    <button class="btn btn-danger">Buscar Trabajadores</button>
</form>
<ul class="list-group">
    <li class="list-group-item">
        Personas: @Model.Personas
    </li>
    <li class="list-group-item">
        Media salarial: @Model.MediaSalarial
    </li>
    <li class="list-group-item">
        Suma salarial: @Model.SumaSalarial
    </li>
</ul>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id Trabajador</th>
            <th>Apellido</th>
            <th>Oficio</th>
            <th>Salario</th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Trabajadores) {
        <tr>
            <td>
                @item.IdTrabajador
            </td>
            <td>
                @item.Apellido
            </td>
            <td>
                @item.Oficio
            </td>
            <td>
                @item.Salario
            </td>
          
        </tr>
}
    </tbody>
</table>
